[flake8]

################### PROGRAM ################################

jobs = auto
python-version = 3.11


################### OUTPUT #################################

count = True
show-source = True
statistics = True
format = default

output-file = .flake8.log
tee = True


################### FILE PATTERNS ##########################

exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache

filename =
    *.py


################### OPTIONS ################################

disable-noqa = False
max-line-length = 88
max-complexity = 10
hang-closing = True


################### RULES ##################################

ignore =
    E133,
    E203,
    W503

select =
    E,
    W,
    F,
    C

per-file-ignores =
    __init__.py:F401,F403
